#! /bin/sh
# rbldnsd	startup script.
#
# chkconfig:	345 80 30
# description:	rbldnsd is a DNS daemon for DNSBLs. \
#				Configure it in /etc/sysconfig/rbldnsd

# Source function library
. /etc/rc.d/init.d/functions

# Get network config
. /etc/sysconfig/network

# Check that networking is up
if is_yes "${NETWORKING}"; then
	if [ ! -f /var/lock/subsys/network -a "$1" != stop -a "$1" != status -a "$1" != init ]; then
		msg_network_down MySQL
		exit 1
	fi
else
	exit 0
fi

NAME=rbldnsd
DESC=rbldnsd
RBLDNSD=

if [ -f /etc/sysconfig/rbldnsd ]; then
  . /etc/sysconfig/rbldnsd
else
  exit 0
fi

test -n "$RBLDNSD" || exit 0

forall() {
	echo "$RBLDNSD" |
	while read name args; do
		case "$name" in
		""|\#*)
			continue
			;;
		-)
			name=$NAME; pidfile=/var/run/$name.pid
			;;
		*)
			pidfile=/var/run/rbldnsd-$name.pid;;
		esac

		pid=
		if [ -f $pidfile ]; then
			read p < $pidfile
			if [ -n "$p" -a -f /proc/$p/cmdline ]; then
				case "`cat /proc/$p/cmdline 2>/dev/null`" in
				*$NAME*)
					pid=$p
					;;
				esac
			fi
		fi
		# call subroutine
		$1
	done
}

report() {
	echo "$1 $DESC: $name"
}

runit() {
	/usr/sbin/rbldnsd -q -p $pidfile $args
}

start() {
	if [ ! "$pid" ]; then
		msg_starting $name
		runit
		RETVAL=$?
		[ "$RETVAL" = 0 ] && ok || fail
	else
		msg_already_running $name
	fi
}

stop() {
	if [ "$pid" ]; then
		msg_stopping $name
		kill $pid
		rm -f $pidfile
		RETVAL=$?
		[ "$RETVAL" = 0 ] && ok || fail
	else
		msg_not_running $name
	fi
}

restart() {
	if [ "$pid" ]; then
		msg_stopping $name
		kill $pid
		[ "$RETVAL" = 0 ] && ok || fail
		RETVAL=$?
		msg_starting $name
		runit
		[ "$RETVAL" != 0 ] && RETVAL=$?
		[ "$RETVAL" = 0 ] && ok || fail
	else
		start
	fi
}

reload() {
	if [ "$pid" ]; then
		msg_reloading $name
		kill -HUP $pid
		RETVAL=$?
		[ "$RETVAL" = 0 ] && ok || fail
	fi
}

RETVAL=0
# See how we were called.
case "$1" in
start|restart)
	forall $1
	touch /var/lock/subsys/rbldnsd
	;;
stop)
	forall $1
	rm -f /var/lock/subsys/rbldnsd
	;;
reload|force-reload)
	forall reload
	;;
status)
	status rbldnsd
	RETVAL=$?
	;;
*)
	msg_usage "$0 {start|stop|restart|reload|force-reload|status}"
	exit 3
	;;
esac

exit $RETVAL
